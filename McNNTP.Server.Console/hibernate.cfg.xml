<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration xmlns="urn:nhibernate-configuration-2.2">
  <session-factory>
    <property name="connection.driver_class">NHibernate.Driver.SQLite20Driver</property>
    <property name="connection.connection_string">Data Source=news.db;Pooling=true;FailIfMissing=false;Version=3;Journal Mode=WAL;Synchronous=NORMAL;Cache Size=10000;Page Size=4096;Temp Store=MEMORY</property>
    <property name="dialect">NHibernate.Dialect.SQLiteDialect</property>
    <property name="query.substitutions">true=1;false=0</property>
    <property name="show_sql">false</property>
    <property name="connection.pool_size">20</property>
    <property name="connection.release_mode">on_close</property>
    <property name="cache.use_second_level_cache">true</property>
    <property name="cache.provider_class">NHibernate.Cache.HashtableCacheProvider</property>
    <property name="cache.use_query_cache">true</property>
    <property name="adonet.batch_size">50</property>
    <property name="prepare_sql">true</property>
  </session-factory>
</hibernate-configuration>