<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="McNNTP" namespace="McNNTP.Server.Data">
  <class name="Administrator" table="Administrator" lazy="true">
    <id name="Id">
      <generator class="native" />
    </id>
    
    <property name="Username" not-null="true" length="1000" unique="true" update="false" />
    <property name="PasswordHash" not-null="true" length="1000" />
    <property name="PasswordSalt" not-null="true" length="1000" />

    <property name="CanApproveGroups" />
    <property name="CanCancel" not-null="true" />
    <property name="CanCreateGroup" not-null="true" />
    <property name="CanDeleteGroup" not-null="true" />
    <property name="CanCheckGroups" not-null="true" />
    <property name="CanInject" not-null="true" />
  </class>
</hibernate-mapping>