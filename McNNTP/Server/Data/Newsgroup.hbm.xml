<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="McNNTP" namespace="McNNTP.Server.Data">
  <class name="Newsgroup" table="Newsgroup" lazy="true">
    <id name="Id" type="Int32">
      <generator class="native" />
    </id>
    <property name="Name" not-null="true" type="String" length="8192" unique="true" update="false" />
    <property name="Description" />
    <property name="Moderated" not-null="true" />
    <property name="PostCount" not-null="true" type="Int32" formula="(SELECT count(a.ID) FROM Article a WHERE a.NewsGroupID = ID AND a.Cancelled = 0 AND a.Pending = 0)"/>
    <property name="LowWatermark" type="Int32" formula="(SELECT min(a.Number) FROM Article a WHERE a.NewsGroupID = ID)" />
    <property name="HighWatermark" type="Int32" formula="(SELECT max(a.Number) FROM Article a WHERE a.NewsGroupID = ID)" />
    <property name="CreateDate"/>
    <property name="CreatorEntity"/>

    <bag name="ModeratedBy" inverse="true" table="NewsgroupModerator">
      <key>
        <column name="NewsgroupID" not-null="true" />
      </key>
      <many-to-many class="Administrator" column="AdministratorID"/>
    </bag>
  </class>
</hibernate-mapping>