<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" auto-import="true" assembly="McNNTP" namespace="McNNTP.Server.Data">
  <class name="Article" table="Article" lazy="true">
    <id name="Id">
      <generator class="native" />
    </id>
    <many-to-one name="Newsgroup" column="NewsgroupId" not-null="true" />
    
    <property name="Date" not-null="true" length="100" />
    <property name="From" column="FromHeader" not-null="true" length="1000" />
    <property name="MessageId" not-null="true" length="500" />
    <property name="Newsgroups" not-null="true" length="1000" />
    <property name="Path" not-null="true" length="1000" />
    <property name="Subject" not-null="true" length="1000" />

    <property name="Approved" />
    <property name="Archive" />
    <property name="Control" />
    <property name="Distribution" />
    <property name="Expires" />
    <property name="FollowupTo" />
    <property name="InjectionDate" />
    <property name="InjectionInfo" />
    <property name="Organization" />
    <property name="References" column="ReferencesHeader" />
    <property name="Summary" />
    <property name="Supersedes" />
    <property name="UserAgent" />
    <property name="Xref" />

    <property name="Headers" />
    <property name="Body" />
  </class>
</hibernate-mapping>